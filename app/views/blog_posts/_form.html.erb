<%= form_with model: blog_post do |f| %>
  <% if f.object.errors.any?%>
    <div>
      <% f.object.errors.full_messages.each do |message|%>
        <div><%= message %></div>
      <%end%>
    </div>
  <%end%>
  
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <%= f.button %>
<% end %>
